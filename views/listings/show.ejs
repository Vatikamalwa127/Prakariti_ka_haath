<%  layout("layouts/boilerplate")  %>
    <div class="row">
      <div class="col-8 offset-2">
      <h3><%= listing.title %></h3>
      </div>
        <div class="card col-4 offset-3 show card listing-card">
          <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image" style="height: 200px; object-fit: cover" >
          <div class="card-body">
            <p class="card-text">Owned by<i><%= listing.owner.username %></i></p>
            
            <br />
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">â‚¹<%= listing.price ? listing.price.toLocaleString("en-IN") : '0' %></p>
          </b> <br>
          <p class="card-text">  <%= listing.location %></p>
          <p class="card-text">  <%= listing.city %> </p>
          </div>
        </div>
                <% if (currUser && listing.owner._id.equals(currUser._id)) {%>
        <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger col-1 offset-3 edit-btn">Edit</a>

      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-primary offset-5">Delete</button>
      </form>
       </div>
       
       <% } %> 
       <div class="col-8 offset-3 mb-3">
        <% if (currUser) {%>
        <h6> Leave a Review</h6>
        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
          <div class="md-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]">
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="25" rows="3" class="form-control" required></textarea>
            <div class="invalid-feedback">Please add some comments for review </div>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>
        <% } %>
        <hr >
          <p><b> All Reviews </b></p>
          <div class="row">
          <% for (review of listing.reviews) { %>
            <div class="card col-5 ms-3 mb-3"> 
              <div class="card-body">
                <h5 class="card-title">@<%= review.author?.username %></h5>
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text"><%= review.rating %> star</p>
              </div>
              <form class="mb-1" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" >
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
           <% }  %>
          </div>
       </div>

  </div>