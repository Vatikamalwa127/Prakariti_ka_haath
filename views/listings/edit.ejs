
  <% layout("/layouts/boilerplate") %>
  <div class="row mt-3">
    <div class="col-8 offset-1" >

    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class=" needs-validation"
         enctype="multipart/form-data" >
        <div class="md-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required/>
            <div class="valid-feedback"> title looks good!</div>
        </div>
        <div class="md-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">please enter a short description</div>
        </div>

        <!-- image Resize code use -->
        <!-- <div class="md-3"> 
            <img src="<%= listing.image.url %>" />
    </div> -->

        <div class="md-3"> 
            <label for="image" class="form-label">Upload Image</label>   
        <input name="listing[image]" type="file" class="form-control" />
    </div>
        <div class="row">
        <div class="md-3 col-md-4">
            <label for="price" class="form-label">Price</label>    
        <input name="listing[price]" value="<%= listing.price %>" type="text" class="form-control" required>
        <div class="invalid-feedback">please enter a valid price</div>
    </div>
        <div class="md-3 col-md-8">
            <label for="location" class="form-label">Location</label>   
        <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required>
        <div class="invalid-feedback">location name should be valid </div>
    </div></div>
        <div class="md-3">
            <label for="city" class="form-label">City</label>
            <input name="listing[city]" value="<%= listing.city %>" type="text" class="form-control" required>
            <div class="invalid-feedback">city name should be valid </div>
        </div>
      
        <button class="btn btn-danger edit-btn mt-2">Edit</button>
    </form>
</div>
</div>
<script src="/public/js/script.js"></script>